<h1 class="newh1"><%= @photo.title %></h1>

<nav>
	<ul class="topnav">		
		<li class="to_new">
			<%= link_to "New Photo", new_photo_path, class: "new_photo" %>
		</li>
		<li class="to_photo">
			<%= link_to "Photos List", photos_path %>
		</li>
		<li class="to_tag">
			<%= link_to "Tags List", tags_path %>
		</li>
	</ul>
</nav>

<div class="buttonbox">
	<div class="buttons">
		<%= link_to "Edit", edit_photo_path(@photo) %>
	</div>
	<div class="buttons">
		<%= link_to "Delete", photo_path(@photo), method: :delete, data: {confirm: "Are you sure?"} %>
	</div>
</div>

<div class="tilebox" id="photos">
  <div class="tiles">
    <div class="photoimg">
    	<%= image_tag(@photo.img_url) %>
    </div>
    <div class="photodesc">
			<%= @photo.description %>
    </div>
		<div class="phototag">
			Tags: 
			<% @photo.tags.each do |tag| %>
			<%= link_to tag.name, tag_path(tag) %>
	    <% end %>
	  </div>	
	</div>
</div>

