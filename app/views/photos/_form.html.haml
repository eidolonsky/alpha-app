%meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
%nav
  %ul.topnav
    %li.to_new
      = link_to "New Photo", new_photo_path, class: "new_photo"
    %li.to_photo
      = link_to "Photos", photos_path
    %li.to_tag
      = link_to "Tags", tags_path
= form_for(@photo) do |f|
  .form
    %ul.errors
      - @photo.errors.full_messages.each do |error|
        %li= error
    .field
      = f.label :title
      %br/
      = f.text_field :title
    .field
      = f.label :description
      %br/
      = f.text_area :description
    .field
      = f.label :img_url, "Image URL"
      %br/
      = f.text_field :img_url
    .field
      = f.label :tag_list, "Tags"
      %br/
      = f.text_field :tag_list, placeholder: "separated with ','"
    .actions
      = f.submit